<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_collapsed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_musicImg"
        android:layout_width="@dimen/dp_50"
        android:src="@color/white"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_musicTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sample"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/dp_15"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        app:layout_constraintStart_toEndOf="@id/iv_musicImg"
        app:layout_constraintTop_toTopOf="@id/iv_musicImg" />

    <TextView
        android:id="@+id/tv_musicInfo"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_height="wrap_content"
        android:text="sample"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@id/iv_musicImg"
        app:layout_constraintStart_toEndOf="@id/iv_musicImg"
        app:layout_constraintTop_toBottomOf="@id/tv_musicTitle" />

    <ImageView
        android:id="@+id/iv_musicPlayPause"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_margin="@dimen/dp_15"
        android:src="@drawable/play_button"
        app:layout_constraintBottom_toBottomOf="@id/iv_musicImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_musicImg" />

</androidx.constraintlayout.widget.ConstraintLayout>